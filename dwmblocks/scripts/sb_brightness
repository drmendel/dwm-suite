#!/bin/bash

# Get the current brightness and max value
current=$(brightnessctl g 2>/dev/null)
max=$(brightnessctl m 2>/dev/null)

# Fallback in case brightnessctl fails
if [ -z "$current" ] || [ -z "$max" ]; then
    echo "N/A"
    exit
fi

# Calculate percentage
percent=$(( current * 100 / max ))

printf "%3d%%\0" "$percent"

